<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Các môn học yêu thích của bạn:"
        android:textColor="#C61F1F"
        android:textSize="25sp" />

    <CheckBox
        android:id="@+id/chkMath"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Toán Học" />

    <CheckBox
        android:id="@+id/chkPhys"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vật Lí" />

    <CheckBox
        android:id="@+id/chkChem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hóa Học" />

    <Button
        android:id="@+id/btnSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Chọn môn học" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#225C6E"
        android:gravity="center"
        android:text="Các môn học bạn đăng ký học:"
        android:textColor="#F6F4F4"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/txtSubject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Danh sách các môn học"
        android:textSize="20sp" />
</LinearLayout>